{
  "author": "Adrian de la Rosa <adrian@joinedapp.com>",
  "dependencies": {
    "uncontrollable": "^7.2.1",
    "uuid": "^8.3.2"
  },
  "description": "Build forms in React as you do in HTML (with some üç¨!!!)",
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/jest": "^26.0.22",
    "@types/uuid": "^8.3.0",
    "esbuild": "^0.11.12",
    "eslint": "^7.24.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.5",
    "eslint-plugin-jsdoc": "^32.3.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-sort-keys-fix": "^1.1.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4"
  },
  "files": [
    "dist",
    "index.js",
    "index.module.js"
  ],
  "keywords": [
    "form",
    "forms",
    "react",
    "spooner",
    "validate",
    "validation"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "name": "spooner",
  "peerDependencies": {
    "prop-types": "^15.7.2",
    "react": "^16.9.0"
  },
  "repository": "adelarosab/spooner",
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:ci": "tsc && npm run build",
    "build:cjs": "esbuild ./src/index.ts --bundle --format=cjs --outfile=./dist/index.cjs.js",
    "build:esm": "esbuild ./src/index.ts --bundle --format=esm --outfile=./dist/index.esm.js",
    "format": "npm run format:ci -- --write",
    "format:ci": "prettier --ignore-path .gitignore -l \"**/*.+(js|json|md|yml)\"",
    "lint": "eslint \"src/**/*.js\" --fix",
    "lint:ci": "npm run lint -- --max-warnings 0",
    "prepare": "npm run build && husky install",
    "start": "npm run test:watch",
    "test": "jest --silent",
    "test:ci": "npm run test -- --coverage",
    "test:watch": "jest --watch"
  },
  "version": "2.1.9"
}
